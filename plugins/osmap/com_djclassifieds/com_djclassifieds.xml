<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="osmap" version="1.6" method="upgrade">
    <name>OSMap - DJ-Classifieds Plugin</name>
   	<creationDate>May 2015</creationDate>
	<author>DJ-Extensions.com</author>
	<copyright>Copyright (C) 2010 DJ-Extensions.com LTD, All rights reserved.</copyright>
	<license> http://www.gnu.org/licenses GNU/GPL</license>
	<authorEmail>contact@design-joomla.eu</authorEmail>
	<authorUrl>http://dj-extensions.com</authorUrl>
	<version>1.1</version>
	<description>PLG_OSMAP_COM_DJCLASSIFIEDS_DESC</description>
    <files>
        <filename plugin="com_djclassifieds">com_djclassifieds.php</filename>
        <filename>index.html</filename>
    </files>		
	<languages folder="language">
        <language tag="en-GB">en-GB.plg_osmap_com_djclassifieds.ini</language>
        <language tag="en-GB">en-GB.plg_osmap_com_djclassifieds.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="include_products" type="list" default="1" label="OSMAP_SETTING_SHOW_LISTINGS_LABEL" description="OSMAP_SETTING_SHOW_LISTINGS_DESC">
                    <option value="0">OSMAP_OPTION_NEVER</option>
                    <option value="1">OSMAP_OPTION_ALWAYS</option>
                    <option value="2">OSMAP_OPTION_XML_ONLY</option>
                    <option value="3">OSMAP_OPTION_HTML_ONLY</option>
                </field>
            </fieldset>
            <fieldset name="xml">
                <field name="cat_priority" type="list" default="0.5" label="Category Priority" description="Set the priority for the categories">
                    <option value="-1">OSMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1">1</option>
                </field>
                <field name="cat_changefreq" type="list" default="weekly" label="Category Change frequency" description="Set the chage frequency for the categories">
                    <option value="-1">OSMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="always">OSMAP_OPTION_ALWAYS</option>
                    <option value="hourly">OSMAP_OPTION_HOURLY</option>
                    <option value="daily">OSMAP_OPTION_DAILY</option>
                    <option value="weekly">OSMAP_OPTION_WEEKLY</option>
                    <option value="monthly">OSMAP_OPTION_MONTHLY</option>
                    <option value="yearly">OSMAP_OPTION_YEARLY</option>
                    <option value="never">OSMAP_OPTION_NEVER</option>
                </field>
                <field name="link_priority" type="list" default="0.5" label="Listing Priority" description="Set the priority for the links">
                    <option value="-1">OSMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1">1</option>
                </field>
                <field name="link_changefreq" type="list" default="weekly" label="Listing Change frequency" description="Set the chage frequency for the links">
                    <option value="-1">OSMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="always">OSMAP_OPTION_ALWAYS</option>
                    <option value="hourly">OSMAP_OPTION_HOURLY</option>
                    <option value="daily">OSMAP_OPTION_DAILY</option>
                    <option value="weekly">OSMAP_OPTION_WEEKLY</option>
                    <option value="monthly">OSMAP_OPTION_MONTHLY</option>
                    <option value="yearly">OSMAP_OPTION_YEARLY</option>
                    <option value="never">OSMAP_OPTION_NEVER</option>
                </field>
            </fieldset>
        </fields>
     </config>
</extension>
