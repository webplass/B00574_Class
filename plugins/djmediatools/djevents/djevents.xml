<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="djmediatools" method="upgrade">
	<name>plg_djmediatools_djevents</name>
	<creationDate>August 2017</creationDate>
    <author>DJ-Extensions.com</author>
	<copyright>Copyright (C) 2017 DJ-Extensions.com, All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses GNU/GPL</license>
	<authorEmail>contact@dj-extensions.com</authorEmail>
	<authorUrl>http://dj-extensions.com</authorUrl>
	<version>1.0.0</version>
	<description>PLG_DJMEDIATOOLS_DJEVENTS_DESCRIPTION</description>
	<files>
		<filename plugin="djevents">djevents.php</filename>
		<filename>index.html</filename>
		<filename>icon.png</filename>
		<folder>language</folder>
	</files>
	
	<config>
		<fields name="params">

			<fieldset name="source_settings" addfieldpath="/administrator/components/com_djevents/models/fields">
				
				<field name="plg_djevents_category" type="djeventscategory" label="PLG_DJMEDIATOOLS_DJEVENTS_CATEGORIES" multiple="true" size="10" skip_default="true" />
				
				<field name="plg_djevents_featured_only" type="radio" class="btn-group" default="0" label="PLG_DJMEDIATOOLS_DJEVENTS_FEATURED_ONLY" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field name="plg_djevents_city" type="djeventscity" label="PLG_DJMEDIATOOLS_DJEVENTS_CITIES" multiple="true" size="10" skip_default="true" skip_new="true" />
				
				<field name="plg_djevents_show_date" type="radio" class="btn-group" default="1" label="PLG_DJMEDIATOOLS_DJEVENTS_SHOW_DATE">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>		
				<field name="plg_djevents_show_cat" type="radio" class="btn-group" default="0" label="PLG_DJMEDIATOOLS_DJEVENTS_SHOW_CATEGORY">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="plg_djevents_cat_link" type="radio" class="btn-group" default="1" label="PLG_DJMEDIATOOLS_DJEVENTS_CATEGORY_LINKED">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>	
				<field name="plg_djevents_show_city" type="radio" class="btn-group" default="0" label="PLG_DJMEDIATOOLS_DJEVENTS_SHOW_CITY">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field name="plg_classifieds_image"	type="media" label="PLG_DJMEDIATOOLS_DJEVENTS_DEFAULT_IMAGE" description="PLG_DJMEDIATOOLS_DJEVENTS_DEFAULT_IMAGE_DESC" />
				
			</fieldset>

		</fields>
	</config>
	
</extension>
