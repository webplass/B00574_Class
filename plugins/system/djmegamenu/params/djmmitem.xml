			<field name="djmobilemenu-module_show_link" type="radio" class="btn-group" default="0" label="PLG_DJMEGAMENU_MOBILE_MODULE_SHOW_LINK" description="PLG_DJMEGAMENU_MOBILE_MODULE_SHOW_LINK_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
			<field type="spacer" label="&lt;hr &#47;&gt;" />
			<field name="djmegamenu-accesskey" type="text" size="1" maxlength="1" default="" class="input-mini" label="PLG_DJMEGAMENU_ACCESSKEY" description="PLG_DJMEGAMENU_ACCESSKEY_DESC" />
		</fieldset>
	</fields>
