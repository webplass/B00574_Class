<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
			readonly="true" class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"/>
			
		<field
			name="name"
			type="text"
			label="COM_DJMESSAGES_FIELD_NAME_LABEL"
			description="COM_DJMESSAGES_FIELD_NAME_DESC"
			required="true" />
			
		<field
			name="type"
			type="text"
			label="COM_DJMESSAGES_FIELD_TYPE_LABEL"
			description="COM_DJMESSAGES_FIELD_TYPE_DESC"
		 />
		 
		 <field name="state" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
	
		<field
			name="subject"
			type="text"
			label="COM_DJMESSAGES_FIELD_SUBJECT_LABEL"
			description="COM_DJMESSAGES_FIELD_SUBJECT_DESC"
			required="true" />

		<field
			name="body"
			type="editor"
			label="COM_DJMESSAGES_FIELD_MESSAGE_LABEL"
			description="COM_DJMESSAGES_FIELD_MESSAGE_DESC"
			required="true"
			filter="JComponentHelper::filterText"
			buttons="true"
			hide="readmore,pagebreak,image,article,module" />
	</fieldset>
</form>
