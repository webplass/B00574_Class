<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" readonly="true" class="readonly" />		
		<field name="name" type="text" class="inputbox" size="40" label="COM_DJCLASSIFIEDS_NAME" description="COM_DJCLASSIFIEDS_NAME" />
		<field name="points" type="text" default="0" label="COM_DJCLASSIFIEDS_POINTS" description="COM_DJCLASSIFIEDS_POINTS_EDIT_DESC" required="true" />		
		<field name="price" filter="float" type="text" default="0" label="COM_DJCLASSIFIEDS_PRICE" description="COM_DJCLASSIFIEDS_PRICE_EDIT_DESC" required="true" />
		<field name="price_special" filter="float" type="text" default="0" label="COM_DJCLASSIFIEDS_SPECIAL_PRICE" description="COM_DJCLASSIFIEDS_PRICE_EDIT_DESC" />
		<field name="points_groups" size="12" multiple="true" type="usergroup" label="COM_DJCLASSIFIEDS_POINT_GROUPS"  description="COM_DJCLASSIFIEDS_POINT_GROUPS_DESC" />
		<field name="description" filter="raw" type="editor" class="inputbox" label="COM_DJCLASSIFIEDS_DESCRIPTION" description="COM_DJCLASSIFIEDS_DESCRIPTION" required="false" />
		<field name="published" type="list" label="COM_DJCLASSIFIEDS_PUBLISHED" description="COM_DJCLASSIFIEDS_PUBLISHED"	class="inputbox" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>		 			
	</fieldset>	
</form>
