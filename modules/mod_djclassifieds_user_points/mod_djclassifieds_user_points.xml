	<version>3.4</version>
	<description>DJ Classifieds User points module</description>
	<files>
		<filename module="mod_djclassifieds_user_points">mod_djclassifieds_user_points.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="fieldMODULECLASSSUFFIX" />					
				<field name="show_points" type="list" default="1" label="MOD_DJCLASSIFIEDS_USER_POINTS_SHOW_USER_POINTS">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>				
				<field name="points_packages_link" type="list" default="1" label="MOD_DJCLASSIFIEDS_USER_POINTS_SHOW_POINTS_PACKAGES_LINK">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>												
				<field name="user_points_link" type="list" default="1" label="MOD_DJCLASSIFIEDS_USER_POINTS_SHOW_USER_POINTS_LINK">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="cache" type="radio" default="0" label="Enable Cache" description="Select whether to cache the content of this module">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
