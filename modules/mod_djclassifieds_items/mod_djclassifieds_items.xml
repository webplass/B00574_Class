				</field>
				<field name="only_p_border" type="list" default="0" label="MOD_DJCLASSIFIEDS_ITEMS_ONLY_PROMOTED_BORDER" description="MOD_DJCLASSIFIEDS_ITEMS_ONLY_PROMOTED_BORDER_DESC">
