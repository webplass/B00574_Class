				</field>
				<field name="only_p_bold" type="list" default="0" label="MOD_DJCLASSIFIEDS_ITEMS_ONLY_PROMOTED_BOLD" description="MOD_DJCLASSIFIEDS_ITEMS_ONLY_PROMOTED_BOLD_DESC">
