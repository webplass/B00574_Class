				</field>
				<field name="show_description" type="list" default="1" label="MOD_DJCLASSIFIEDS_ITEMS_SHOW_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>	
				<field name="desc_source" type="list" default="0" label="MOD_DJCLASSIFIEDS_ITEMS_DESC_SOURCE_DESC">
					<option value="0">MOD_DJCLASSIFIEDS_ITEMS_INTRO_DESC</option>
					<option value="1">MOD_DJCLASSIFIEDS_ITEMS_FULL_DESC</option>
				</field>
				<field name="desc_link" type="list" default="0" label="MOD_DJCLASSIFIEDS_ITEMS_DESC_LINKED">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>	
				<field name="char_desc_nr" type="text" default="50" label="MOD_DJCLASSIFIEDS_ITEMS_CHARS_IN_DESC" description="MOD_DJCLASSIFIEDS_ITEMS_CHARS_IN_DESC_DESC" />
				<field name="custom_fields" type="list" default="0" label="MOD_DJCLASSIFIEDS_ITEMS_CUSTOM_FIELDS" >
					<option value="0">JNO</option>
					<option value="1">MOD_DJCLASSIFIEDS_ITEMS_CATEGORY_FIELDS</option>
					<option value="2">MOD_DJCLASSIFIEDS_ITEMS_CONTACT_FIELDS</option>
					<option value="3">MOD_DJCLASSIFIEDS_ITEMS_ALL_FIELDS</option>
				</field>
				<field name="show_fav_icon" type="list" default="0" label="MOD_DJCLASSIFIEDS_ITEMS_SHOW_FAVOURITED_ICON">
